generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String   @db.VarChar(200)
  last_name  String   @db.VarChar(200)
  email      String   @db.VarChar(200) @unique
  admin      Boolean  @default(false)
  active     Boolean  @default(true)
  created_at DateTime @default(now())
  Invetory   Inventory?

  @@map("user")
}

model Product {
  id         String   @id @default(uuid())
  name       String   @db.VarChar(200)
  bar_code   String   @db.VarChar(200)
  quantity   Int      @db.Integer
  active     Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  Category   Category?

  @@map("product")
}

model Category {
  id      String @id @default(uuid())
  prod_id Product @relation(fields: [id], references: [id])
  name    String @db.VarChar(200)
  SubCat  SubCategory[]

  @@map("category")
}

model SubCategory {
  id       String @id @default(uuid())
  name     String @db.VarChar(200)
  cat_id   String
  Category Category @relation(fields: [cat_id], references: [id])

  @@map("subcategory")

}

model Inventory {
  user_email   String @db.VarChar(200) @unique
  email        User   @relation(fields: [user_email], references: [email])
  product_list String[]

  @@map("inventory")
}
